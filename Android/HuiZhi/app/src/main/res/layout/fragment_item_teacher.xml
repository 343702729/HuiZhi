<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">
    <com.huizhi.manage.wiget.pullableview.PullToRefreshLayout
        android:id="@+id/refreshview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/item_pull_refresh_head" />
        <com.huizhi.manage.wiget.pullableview.PullableScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <FrameLayout
                    android:id="@+id/banner_fl"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/white">

                    <com.huizhi.manage.wiget.banner.BannerViewFlow
                        android:id="@+id/viewflow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:id="@+id/points_ll"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:orientation="horizontal">

                    </LinearLayout>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/user_iv"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@mipmap/user_icon"/>
                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/black_light"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="学分:"
                            android:textSize="13sp"
                            android:textColor="@color/gray"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="0"
                            android:textSize="13sp"
                            android:textColor="#94D050"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:visibility="gone"
                            android:text="排名:"
                            android:textSize="13sp"
                            android:textColor="@color/gray"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:visibility="gone"
                            android:text="168"
                            android:textSize="13sp"
                            android:textColor="#94D050"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/item_bj_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/icon_tch_bk"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="备课·家校"
                                android:textSize="12sp"
                                android:textColor="@color/gray_dark_text"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/item_jy_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/icon_tch_sk"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="教研"
                                android:textSize="12sp"
                                android:textColor="@color/gray_dark_text"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/item_xx_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/icon_tch_xx"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="学习"
                                android:textSize="12sp"
                                android:textColor="@color/gray_dark_text"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/icon_tch_jl"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="学习记录"
                                android:textSize="12sp"
                                android:textColor="@color/gray_dark_text"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/icon_tch_sc"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="我的收藏"
                                android:textSize="12sp"
                                android:textColor="@color/gray_dark_text"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="本周课程"
                                android:textSize="14sp"
                                android:textColor="@color/gray_dark_text"/>
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp">
                                <ProgressBar
                                    android:id="@+id/kc_pb"
                                    android:layout_width="match_parent"
                                    android:layout_height="8dp"
                                    android:layout_marginRight="50dp"
                                    android:layout_gravity="center_vertical"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:max="0"
                                    android:progress="0"
                                    android:progressDrawable="@drawable/progress_bar_blue"/>
                                <TextView
                                    android:id="@+id/kc_tv"
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center_vertical"
                                    android:gravity="left"
                                    android:text="0/0"
                                    android:textColor="@color/gray_dark_text"
                                    android:textSize="14sp"/>
                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="本周备课"
                                android:textSize="14sp"
                                android:textColor="@color/gray_dark_text"/>
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp">
                                <ProgressBar
                                    android:id="@+id/bk_pg"
                                    android:layout_width="match_parent"
                                    android:layout_height="8dp"
                                    android:layout_marginRight="50dp"
                                    android:layout_gravity="center_vertical"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:max="0"
                                    android:progress="0"
                                    android:progressDrawable="@drawable/progress_bar_green"/>
                                <TextView
                                    android:id="@+id/bk_tv"
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center_vertical"
                                    android:gravity="left"
                                    android:text="0/0"
                                    android:textColor="@color/gray_dark_text"
                                    android:textSize="14sp"/>
                            </FrameLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="本周评语"
                                android:textSize="14sp"
                                android:textColor="@color/gray_dark_text"/>
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp">
                                <ProgressBar
                                    android:id="@+id/py_pg"
                                    android:layout_width="match_parent"
                                    android:layout_height="8dp"
                                    android:layout_marginRight="50dp"
                                    android:layout_gravity="center_vertical"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:max="0"
                                    android:progress="0"
                                    android:progressDrawable="@drawable/progress_bar_orange"/>
                                <TextView
                                    android:id="@+id/py_tv"
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center_vertical"
                                    android:gravity="left"
                                    android:text="0/0"
                                    android:textColor="@color/gray_dark_text"
                                    android:textSize="14sp"/>
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <!-- 学习 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="学习"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/black_light"/>
                        <LinearLayout
                            android:id="@+id/more_xx_ll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginBottom="2dp"
                                android:text="更多"
                                android:textSize="12sp"
                                android:textColor="@color/gray"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:background="@mipmap/icon_s_arrow_right"/>
                        </LinearLayout>

                    </FrameLayout>
                    <LinearLayout
                        android:id="@+id/study_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>
                <!-- 最新教研 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="最新教研"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/black_light"/>
                        <LinearLayout
                            android:id="@+id/more_kc_ll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginBottom="2dp"
                                android:text="更多"
                                android:textSize="12sp"
                                android:textColor="@color/gray"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:background="@mipmap/icon_s_arrow_right"/>
                        </LinearLayout>

                    </FrameLayout>
                    <LinearLayout
                        android:id="@+id/course_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </com.huizhi.manage.wiget.pullableview.PullableScrollView>
        <include layout="@layout/item_pull_load_more" />
    </com.huizhi.manage.wiget.pullableview.PullToRefreshLayout>
</LinearLayout>
