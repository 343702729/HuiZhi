<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">
    <!-- title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_gradation"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_marginTop="@dimen/navigation_padding"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="我的任务"
                android:textSize="@dimen/title_text"
                android:textColor="@android:color/white"/>

            <ImageButton
                android:id="@+id/back_btn"
                style="@style/back_btn"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_location_school"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="苏州市甪直校区"
            android:textColor="@color/dark_gray"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/sort_btn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="排序"
                android:textColor="@drawable/select_item_bg"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/sort_iv"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@mipmap/icon_px_1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/filter_btn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="筛选"
                android:textColor="@drawable/select_item_bg"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/filter_iv"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:background="@mipmap/icon_sx_1"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/assigned_tv"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="0"
                android:textColor="@color/light_black"
                android:textSize="28sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="我的分配"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/app_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/beapprove_tv"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="0"
                android:textColor="@color/light_red"
                android:textSize="28sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="待审核"
                android:textColor="@color/light_s_red"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.huizhi.manage.wiget.pullableview.PullToRefreshLayout
            android:id="@+id/refreshview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="51dp">
            <include layout="@layout/item_pull_refresh_head" />


                <com.huizhi.manage.wiget.swipe.SwipeListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:background="@android:color/white"/>



            <include layout="@layout/item_pull_load_more" />
        </com.huizhi.manage.wiget.pullableview.PullToRefreshLayout>
        <!--<ListView-->
            <!--android:id="@+id/listview"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_marginBottom="51dp"-->
            <!--android:background="@android:color/white"/>-->

        <Button
            android:id="@+id/create_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:text="创建任务"
            android:textColor="@color/text_light_blue"
            android:textSize="20sp"></Button>
    </FrameLayout>

</LinearLayout>
