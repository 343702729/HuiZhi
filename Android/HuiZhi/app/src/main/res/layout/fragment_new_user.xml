<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/navigation_padding"
                android:background="@mipmap/user_show_bg"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/user_iv"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="30dp"
                    android:background="@mipmap/user_icon"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/black_light"/>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/frame_circle_green">
                            <TextView
                                android:id="@+id/role_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="12sp"/>
                        </FrameLayout>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/school_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="@color/gray"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <!-- 代办任务 -->
                <LinearLayout
                    android:id="@+id/user_db_ll"
                    style="@style/item_line_ll"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_user_db"/>
                    <TextView
                        style="@style/info_title_tv"
                        android:text="待办任务"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:background="@mipmap/icon_m_arrow_right"/>
                    </FrameLayout>
                </LinearLayout>
                <View
                    android:id="@+id/user_db_v"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:layout_marginLeft="20dp"
                    android:background="@color/app_bg"/>

                <!-- 任务中心 -->
                <LinearLayout
                    android:id="@+id/user_rw_ll"
                    style="@style/item_line_ll">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_user_rw"/>
                    <TextView
                        style="@style/info_title_tv"
                        android:text="任务中心"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:background="@mipmap/icon_m_arrow_right"/>
                    </FrameLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/app_bg"/>

                <!-- 任务管理 -->
                <LinearLayout
                    android:id="@+id/user_fp_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        style="@style/item_line_ll"
                        android:visibility="gone">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/icon_user_fp"/>
                        <TextView
                            style="@style/info_title_tv"
                            android:text="任务管理"/>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:background="@mipmap/icon_m_arrow_right"/>
                        </FrameLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:visibility="gone"
                        android:background="@color/app_bg"/>
                </LinearLayout>


                <!-- 企业邮箱 -->
                <LinearLayout
                    android:id="@+id/user_yj_ll"
                    style="@style/item_line_ll"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_user_yj"/>
                    <TextView
                        style="@style/info_title_tv"
                        android:text="企业邮箱"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:background="@mipmap/icon_m_arrow_right"/>
                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@color/white">
                <!-- 修改头像 -->
                <LinearLayout
                    android:id="@+id/user_tx_ll"
                    style="@style/item_line_ll">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_user_tx"/>
                    <TextView
                        style="@style/info_title_tv"
                        android:text="修改头像"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:background="@mipmap/icon_m_arrow_right"/>
                    </FrameLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/app_bg"/>

                <!-- 修改密码 -->
                <LinearLayout
                    android:id="@+id/user_xx_ll"
                    style="@style/item_line_ll">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_user_xx"/>
                    <TextView
                        style="@style/info_title_tv"
                        android:text="修改密码"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:background="@mipmap/icon_m_arrow_right"/>
                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@color/white">
                <!-- 关于绘智 -->
                <LinearLayout
                    android:id="@+id/user_gy_ll"
                    style="@style/item_line_ll">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_user_gy"/>
                    <TextView
                        style="@style/info_title_tv"
                        android:text="关于绘智"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:background="@mipmap/icon_m_arrow_right"/>
                    </FrameLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/app_bg"/>

                <!-- 隐私协议 -->
                <LinearLayout
                    android:id="@+id/user_ys_ll"
                    style="@style/item_line_ll">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_user_xy"/>
                    <TextView
                        style="@style/info_title_tv"
                        android:text="隐私协议"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:background="@mipmap/icon_m_arrow_right"/>
                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/logout_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="退出"
                android:textSize="15sp"
                android:textColor="@color/blue_light"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
