<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <!-- title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_gradation"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_marginTop="@dimen/navigation_padding"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的任务"
                android:textSize="@dimen/title_text"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/sort_btn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="排序"
                android:textColor="@color/text_light_black"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/sort_iv"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@mipmap/icon_px_1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/filter_btn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="筛选"
                android:textColor="@drawable/select_item_bg"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/filter_iv"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:background="@mipmap/icon_sx_1"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/task_total_tv"
                android:layout_width="80dp"
                android:layout_height="34dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/light_black"
                android:textSize="28sp"/>
            <TextView
                android:id="@+id/task_total_t_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="待办总数"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/app_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/today_total_tv"
                android:layout_width="80dp"
                android:layout_height="34dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/light_black"
                android:textSize="28sp"/>
            <TextView
                android:id="@+id/today_total_t_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="今日待办"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <com.huizhi.manage.wiget.pullableview.PullToRefreshLayout
        android:id="@+id/refreshview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp">
        <include layout="@layout/item_pull_refresh_head" />

        <com.huizhi.manage.wiget.pullableview.PullableListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:background="@android:color/white"/>

        <include layout="@layout/item_pull_load_more" />
    </com.huizhi.manage.wiget.pullableview.PullToRefreshLayout>
