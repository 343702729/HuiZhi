<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/person_ll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true"
        android:paddingLeft="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/person_ck_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/check_bg"/>
        <CheckBox
            android:id="@+id/person_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:button="@drawable/frame_checkbox_person_sel"
            android:checked="false"/>
        <com.huizhi.manage.wiget.CircleImageView
            android:id="@+id/person_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/user_icon"/>

        <TextView
            android:id="@+id/person_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:text="王老师"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"/>
    </LinearLayout>

</LinearLayout>
