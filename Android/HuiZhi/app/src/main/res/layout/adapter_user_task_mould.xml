<?xml version="1.0" encoding="utf-8"?>
<com.huizhi.manage.wiget.swipe.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/item_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:text="周一任务模板"
            android:textSize="18sp"
            android:textColor="@color/light_black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@mipmap/right_icon"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/move_up_btn"
            android:text="上移"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@color/light_gray"
            android:layout_width="60dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/move_down_btn"
            android:text="下移"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@color/light_yellow"
            android:layout_width="60dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/delete_btn"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@color/red"
            android:layout_width="60dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
</com.huizhi.manage.wiget.swipe.SwipeItemLayout>

