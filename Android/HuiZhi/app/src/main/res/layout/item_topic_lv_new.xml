<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLength="8"
            android:textSize="18sp"
            android:textColor="#0E2C40"/>

        <com.ruffian.library.RTextView
            android:id="@+id/age_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:paddingRight="8dp"
            android:paddingBottom="3dp"
            android:visibility="gone"
            app:corner_radius="25dp"
            android:text="3周岁"
            android:textSize="10sp"
            android:textColor="@color/dark_gray_light"
            app:border_color_normal="#F2F5F8"
            app:background_normal="#F2F5F8"/>
    </LinearLayout>
    <TextView
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:text=""
        android:textSize="12sp"
        android:textColor="#95A3AC"/>
    <TextView
        android:id="@+id/enhance_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text=""
        android:textSize="12sp"
        android:textColor="#95A3AC"/>

</LinearLayout>
